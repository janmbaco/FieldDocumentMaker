<UserControl x:Class="FieldDocumentMaker.WPF.Window.FileDocumentMakerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
             xmlns:local="clr-namespace:FieldDocumentMaker.WPF.Window"
             xmlns:Tree="clr-namespace:FieldDocumentMaker.WPF.Window.TreeBranch"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1280"
             MinWidth="1024" MinHeight="768">
    <Grid>
        <DockPanel  >
            <Ribbon DockPanel.Dock="Top"  MaxHeight="110" />
            <TreeView  DockPanel.Dock="Left" MinWidth="200"  Padding="5 5 20 5" ItemsSource="{Binding ViewModel.TreeBranchVM}"   >
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="True"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type Tree:TreeBranchVM}" ItemsSource="{Binding Children}" >

                        <StackPanel  Orientation="Horizontal" PreviewMouseLeftButtonDown="StackPanel_PreviewMouseLeftButtonDown" >
                            <TextBlock x:Name="textBlock" Text="{Binding PropertyName}"  />
                            <TextBlock Text=": " />
                            <TextBlock Text="{Binding Value}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <Grid >
                <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="0,1">
                    <cefSharp:ChromiumWebBrowser  Address="{Binding ViewModel.Address}" WebBrowser="{Binding ViewModel.WebBrowser, Mode=OneWayToSource}"   />
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
